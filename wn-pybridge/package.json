{
  "name": "wn-pybridge",
  "version": "1.0.0",
  "description": "TypeScript interface to Python wn library via pythonia bridge",
  "main": "dist/index.js",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./similarity": "./dist/similarity.js",
    "./taxonomy": "./dist/taxonomy.js",
    "./morphy": "./dist/morphy.js",
    "./types": "./dist/types.js"
  },
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:bench": "vitest bench",
    "test:coverage": "vitest --coverage",
    "clean": "rimraf -rf dist",
    "prebuild": "npm run clean",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "check": "npm run lint && npm run test"
  },
  "keywords": [
    "wordnet",
    "python",
    "bridge",
    "typescript",
    "nlp",
    "semantic",
    "similarity",
    "morphology",
    "taxonomy"
  ],
  "license": "MIT",
  "author": "fustilio",
  "repository": {
    "type": "git",
    "url": "https://github.com/fustilio/wordnet-playground.git",
    "directory": "wn-pybridge"
  },
  "bugs": {
    "url": "https://github.com/fustilio/wordnet-playground/issues"
  },
  "homepage": "https://github.com/fustilio/wordnet-playground#readme",
  "dependencies": {
    "pythonia": "catalog:"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "@typescript-eslint/eslint-plugin": "catalog:",
    "@typescript-eslint/parser": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "rimraf": "catalog:"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
